{
  "name": "@friends-library/adoc-convert",
  "description": "utilities for converting asciidoc to html",
  "version": "1.0.0",
  "author": "Jared Henderson <jared@netrivet.com>",
  "license": "MIT",
  "repository": "github:friends-library-dev/adoc-convert",
  "main": "dist/index.js",
  "sideEffects": false,
  "browser": {
    "./dist/asciidoctor.js": "./dist/asciidoctor.browser.js"
  },
  "scripts": {
    "test": "npx jest .",
    "ts:check": "npx tsc --noEmit -p .",
    "lint": "npx eslint '**/*.{ts,tsx,js}'",
    "lint:fix": "npm run lint -- --fix",
    "format": "npx prettier \"**/*.{ts,tsx,js}\" --write",
    "format:check": "npx prettier \"**/*.{ts,tsx,js}\" --check"
  },
  "dependencies": {
    "@asciidoctor/core": "^2.0.2",
    "@friends-library/adoc-utils": "1.0.0",
    "@friends-library/doc-html": "1.0.0",
    "@friends-library/types": "1.0.0",
    "roman-numerals": "^0.3.2",
    "striptags": "^3.1.1",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "@types/fs-extra": "^5.0.5",
    "@types/lodash": "^4.14.123",
    "@types/roman-numerals": "^0.3.0",
    "@types/uuid": "^3.4.5",
    "strip-indent": "^3.0.0",
    "@friends-library/eslint-plugin": "1.0.1",
    "@typescript-eslint/eslint-plugin": "^4.2.0",
    "@typescript-eslint/parser": "^4.2.0",
    "eslint": "^7.9.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-no-only-tests": "^2.4.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": ">=25.0.0",
    "prettier": "^2.1.2",
    "ts-jest": ">=25.0.0",
    "typescript": ">=3.9.5"
  }
}
